<%- include('admin-header') -%>
<div class="login-wrapper">
    <div class="login-div">
        <div class="container">
            <div class="row login-row">
                <div class="login-left col-lg-6 col-md-6">
                    
                </div>
                <div class="login-right col-lg-6 col-md-6">
                    <img src="http://ritzyware.com/wp-content/uploads/2018/02/Logo-1-300x100.jpeg" alt="Ritzyware"
							class="default-logo" />
                    <h2>Welcome To Ritzyware</h2>
                    <form class="login-from-rit" method = "POST" action="/admin/login_now">
                        <div class="form-control-rit">
                            <label>Username</label>
                            <input type="text" name="user_name" id="user_name" class="input-field">
                        </div>
                        <div class="form-control-rit">
                            <label>Password</label>
                            <input type="password" name="user_pass" id="user_pass" class="input-field">
                        </div>
                        <div class="form-control-rit">
                            <input type="submit" name="Login Now" id="user_submit" class="input-submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('admin-footer') -%>